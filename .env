# MongoDB
MONGO_URI=mongodb://localhost:27017/gdelt_trends

# Redis (for caching; optional)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# GDELT download base URL (default)
GDELT_BASE_URL=http://data.gdeltproject.org/gdeltv2/gkg

# If your GDELT files lack headers, set indices (0-based). Leave blank to auto-detect from header if present.
# Example: V2Themes often at index 5 in some versions â€” adjust for your files.
V2THEMES_INDEX=
V2PERSONS_INDEX=
V2ORGS_INDEX=
V2LOCATIONS_INDEX=
V2TONE_INDEX=
DATEADDED_INDEX=

# Misc
REALTIME_INTERVAL_MIN=15   # cron minutes for real-time (*/15)
DAILY_HOUR_UTC=0           # daily aggregation hour (UTC)
TOP_N=50                   # number of top keywords to store
PORT=3000
